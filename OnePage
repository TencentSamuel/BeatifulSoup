from lxml import etree
import requests
import time
import matplotlib.pyplot as plt
from bs4 import BeautifulSoup

def getHTML(url):
    r = requests.get(url)
    return r.content
    
page=3
for a in range(2,page):
    time.sleep(2)
    url = 'https://www.taptap.com/app/85108/review?order=default&page={}#review-list'.format(a)
    html = getHTML(url)
    
    soup = BeautifulSoup(html,'html.parser') 
    #comment_list=soup.find_all('li',class_="taptap-review-item collapse in")
    comment_list=soup.find_all('div',class_="item-text-body")
   #print(comment_list)
    eachCommentList=''
  
    for item in comment_list:
        eachCommentList+=item.find_all('p')[0].get_text()
    print(eachCommentList)
